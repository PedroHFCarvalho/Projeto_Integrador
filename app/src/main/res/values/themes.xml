<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item> <!-- Barra na parte de cima da tela-->
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item> <!-- Cor do Txt -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item> <!-- Botao Flutuante -->
        <item name="colorSecondaryVariant">@color/secondaryTextColor</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Botao do + flutuante-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary
        </item>
        <!-- Customize your theme here. -->
    </style>
    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="buttonAdicionar">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="background_card">
        <item name="android:background">@color/white</item>
    </style>

    <style name="textValor">
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <style name= "Theme.InicioFragment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name= "Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/primaryColor</item> <!-- Botao do + flutuante-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

</resources>