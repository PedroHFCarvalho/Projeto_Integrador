<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pi" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item> <!-- Barra na parte de cima da tela-->
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item> <!-- Cor do Txt -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item> <!-- Botao Flutuante -->
        <item name="colorSecondaryVariant">@color/secondaryTextColor</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Botao do + flutuante-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary
        </item> <!-- Barra de Status-->
        <!-- Customize your theme here. -->
    </style>

    <style name="background">
        <item name="android:background">@color/blackLight</item>
    </style>

    <style name="buttonAdicionar">
        <item name="android:background">@color/blackLight</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="background_card">
        <item name="android:background">@color/blackLight</item>
    </style>

    <style name="textValor">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>